{
   "manifest_version": 3,
   "name": "书签备份--Bookmark Backup",
   "version": "2.0",
   "description": "书签备份（云端/本地，自动/手动，时间线，提醒）or Bookmark Backup (Cloud/Local, Auto/Manual, Timeline, Reminder)",
   "author": "kk1",
   "icons": {
      "100": "icons/icon200.png"
   },
   "action": {
      "default_icon": {
         "200": "icons/icon200.png"
      },
      "default_popup": "popup.html"
   },
   "background": {
      "service_worker": "background.js",
      "type": "module"
   },
   "commands": {
      "open_current_changes_view": {
         "suggested_key": {
            "default": "Alt+1",
            "mac": "Alt+1",
            "windows": "Alt+1",
            "linux": "Alt+1"
         },
         "description": "Open 'Current quantity/structure changes' view"
      },
      "open_backup_history_view": {
         "suggested_key": {
            "default": "Alt+2",
            "mac": "Alt+2",
            "windows": "Alt+2",
            "linux": "Alt+2"
         },
         "description": "Open 'Backup history' view"
      },
      "open_canvas_view": {
         "suggested_key": {
            "default": "Alt+3",
            "mac": "Alt+3",
            "windows": "Alt+3",
            "linux": "Alt+3"
         },
         "description": "Open 'Bookmark Canvas' view"
      },
      "open_additions_view": {
         "suggested_key": {
            "default": "Alt+4",
            "mac": "Alt+4",
            "windows": "Alt+4",
            "linux": "Alt+4"
         },
         "description": "Open 'Bookmark Review' view"
      }
   },
   "permissions": [
      "bookmarks",
      "storage",
      "unlimitedStorage",
      "alarms",
      "commands",
      "scripting",
      "windows",
      "tabs",
      "tabGroups",
      "downloads",
      "downloads.shelf",
      "activeTab"
   ],
   "host_permissions": [
      "https://*/*",
      "<all_urls>"
   ],
   "web_accessible_resources": [ {
      "matches": [ "<all_urls>" ],
      "resources": [ 
         "popup.html", 
         "icons/icon200.png", 
         "backup_reminder/notification_popup.html",
         "history_html/history.html",
         "history_html/history.css",
         "history_html/history.js",
         "history_html/history_bootstrap.js",
         "history_html/window_marker.html",
         "history_html/window_marker.js",
         "history_html/*"
      ]
   } ]
}
